@model WebApp.Models.SuitAlterationViewModel
@{
    ViewData["Title"] = "Suit Alteration Details";
}

<h2>Pay for Suit Alterations</h2>
<div class="row">
    <form asp-action="PayForAlteration" asp-controller="SuitAlteration" method="post">
        <div class="form-group">
            <label asp-for="SuitAlterationId" class="control-label"></label>
            <input asp-for="SuitAlterationId" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="CustomerId" class="control-label"></label>
            <input asp-for="CustomerId" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="SuitId" class="control-label"></label>
            <input asp-for="SuitId" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <input asp-for="Status" class="form-control" readonly />
        </div>
        @if  (Model.Status == "created")
        {
            <input type="submit" value="Pay" />
        }
        @if (Model.Status == "paid")
        {
            <input type="submit" value="Complete" />
        }
    </form>
</div>