@model WebApp.Models.NewSuitAlterationViewModel
@{
    ViewData["Title"] = "Suit Alteration Details";
}

<h2>New Suit Alteration</h2>
<div class="row">
    <form asp-action="NewSuitAlteration" asp-controller="SuitAlteration" method="post">
        <div class="form-group">
            <label asp-for="CustomerName" class="control-label"></label>
            <input asp-for="CustomerName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SuitName" class="control-label"></label>
            <input asp-for="SuitName" class="form-control" />
        </div>
        @Html.DropDownList("AlterationType", Html.GetEnumSelectList<NewSuitAlterationType>(), "Select Alteration Type", new { @class = "form-control" })
        <input type="submit" value="Create" />
    </form>
</div>